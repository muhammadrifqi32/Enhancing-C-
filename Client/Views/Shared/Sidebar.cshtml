@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> Html
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var fullName = HttpContextAccessor.HttpContext?.Session.GetString("FullName") ?? "Guest";
}

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" href="/Accounts/Logout" id="logoutButton" role="button" data-toggle="tooltip" data-placement="left" title="Logout">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </li>
    </ul>
</nav>
<!-- /.navbar -->
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="../../index3.html" class="brand-link">
        <img src="~/adminlte-3.2.0/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/adminlte-3.2.0/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@fullName</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Dashboard -->
                <li class="nav-item">
                    <a asp-controller="Dashboards"
                       asp-action="Index"
                       class="nav-link @(currentController == "Dashboards" ? "active" : "")">
                        <i class="nav-icon fas fa-columns"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <!-- Tables 1 -->
                <li class="nav-item @(currentController == "Employees" ? "menu-open" : "")">
                    <a href="#" class="nav-link @(currentController == "Employees" ? "active" : "")">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            Tables 1
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Employees"
                               asp-action="Index"
                               class="nav-link @(currentController == "Employees" && currentAction == "Index" ? "active" : "")">
                                <p>Employee</p>
                            </a>
                        </li>
                        <!-- Tambah submenu lainnya di sini -->
                    </ul>
                </li>

                <!-- Tables 2 -->
                <li class="nav-item @(currentController == "Departments" ? "menu-open" : "")">
                    <a href="#" class="nav-link @(currentController == "Departments" ? "active" : "")">
                        <i class="nav-icon fas fa-building"></i>
                        <p>
                            Tables 2
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Departments"
                               asp-action="Index"
                               class="nav-link @(currentController == "Departments" && currentAction == "Index" ? "active" : "")">
                                <p>Department</p>
                            </a>
                        </li>
                        <!-- Tambah submenu lainnya di sini -->
                    </ul>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>